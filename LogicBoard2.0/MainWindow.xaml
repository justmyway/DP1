<Window x:Class="LogicBoard2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogicBoard2._0"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1200" MinWidth="1200" MinHeight="700" Background="#FF00B9FF">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0" Margin="5" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible">
            <Canvas x:Name="scheme" Background="WhiteSmoke" Height="441" Width="1164">

            </Canvas>
        </ScrollViewer>
        <GridSplitter Grid.Row="1" />
        <Grid x:Name="LogBook" HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="2" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="450"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="CircuitText" Grid.Column="0" Height="190" Margin="5" VerticalScrollBarVisibility="Visible" />
            
            <Rectangle Grid.Column="1" Margin="10,0,0,10" Width="281"/>
            <Label x:Name="FileName" Content="Geen bestand geselecteerd" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
            <Button x:Name="OpenFile" Content="Open file" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Grid.Column="1" Margin="10,41,0,0" Click="OpenFile_Click"/>
            <Button x:Name="SaveFile" Content="Save file" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Grid.Column="1" Margin="10,71,0,0" Click="SaveFile_Click"/>
            <Button x:Name="RunFile" Content="Run file" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Grid.Column="1" Margin="10,101,0,0" Click="RunFile_Click"/>
            
            <TextBox x:Name="LogBookText" Grid.Column="2" Height="190" Margin="5" VerticalScrollBarVisibility="Visible" />
            <Label Grid.Column="2" Content="logboek" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,25,0"/>
            <Button x:Name="RunCircuit" Content="Run circuit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Grid.Column="1" Margin="10,131,0,0" Click="RunCircuit_Click" IsEnabled="False"/>
            <Label Content="Delay" Grid.Column="1" HorizontalAlignment="Left" Margin="10,161,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="Delay" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="90,165,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="74" TextAlignment="Center"/>
            <Label Content="Miliseconds" Grid.Column="1" HorizontalAlignment="Left" Margin="169,161,0,0" VerticalAlignment="Top"/>
            <Label Content="Total runtime:" Grid.Column="1" HorizontalAlignment="Left" Margin="159,43,0,0" VerticalAlignment="Top" Width="82" HorizontalContentAlignment="Center"/>
            <Label x:Name="Runtime" Content="---" Grid.Column="1" HorizontalAlignment="Left" Margin="159,71,0,0" VerticalAlignment="Top" Width="82" HorizontalContentAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
